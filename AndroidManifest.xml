<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.appropel.xplanegps"
          android:versionCode="121"
          android:versionName="1.21">
    <uses-sdk android:minSdkVersion="8" android:targetSdkVersion="8"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_MOCK_LOCATION"/>

    <application android:label="@string/app_name" android:name="com.appropel.xplanegps.guice.MainApplication"
                 android:icon="@drawable/ic_launcher_gps">
        <activity android:name="com.appropel.xplanegps.activity.MainActivity"
                  android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.appropel.xplanegps.activity.DataActivity"/>
        <activity android:name="com.appropel.xplanegps.activity.InstructionActivity"/>
        <service android:name="com.appropel.xplanegps.service.DataService"/>
    </application>
</manifest> 
