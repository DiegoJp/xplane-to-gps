<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:padding="20dp">
    <TableLayout
            android:id="@+id/table_layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_alignParentTop="true">
        <TableRow>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/latitude"
                    android:gravity="left"
                    android:textSize="@dimen/font_size"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/latitude_view"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_size"
                    />
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/longitude"
                    android:gravity="left"
                    android:textSize="@dimen/font_size"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/longitude_view"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_size"
                    />
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/altitude"
                    android:gravity="left"
                    android:textSize="@dimen/font_size"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/altitude_view"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_size"
                    />
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/heading"
                    android:gravity="left"
                    android:textSize="@dimen/font_size"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/heading_view"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_size"
                    />
        </TableRow>
        <TableRow>
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/groundspeed"
                    android:gravity="left"
                    android:textSize="@dimen/font_size"
                    />
            <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/groundspeed_view"
                    android:gravity="center_horizontal"
                    android:textSize="@dimen/font_size"
                    />
        </TableRow>
        <TableRow
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_of_fix"
                    android:id="@+id/textView" android:textSize="@dimen/font_size"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/time_view" android:gravity="center_horizontal"
                    android:textSize="@dimen/font_size"/>
        </TableRow>
    </TableLayout>
    <LinearLayout android:id="@+id/on_switch"
                  android:orientation="horizontal"
                  android:gravity="center_horizontal|center_vertical"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="5dp"
                  android:layout_below="@id/table_layout">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size"
            android:text="@string/paused"
            android:padding="10dp"/>

        <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/active_button"
                android:padding="10dp"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/font_size"
            android:text="@string/active"
            android:padding="10dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/copilot_x_ad"
        android:orientation="horizontal"
        android:gravity="center_horizontal|center_vertical"
        android:layout_alignParentBottom="true"
        android:padding="5dp"
        >

        <TextView
            android:text="@string/copilot_x"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/copilot_x_button"
            android:drawableLeft="@drawable/ic_robot"
            android:drawablePadding="5dp"
            android:layout_gravity="center_horizontal"
            android:gravity="center_vertical"/>

    </LinearLayout>


</RelativeLayout>
