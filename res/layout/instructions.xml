<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:paddingRight="5dp"
        >
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/mock_location"
            android:textSize="@dimen/font_size"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/ip_text_view"
            android:text="@string/ip_instructions"
            android:textSize="@dimen/font_size"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/data_instructions"
            android:textSize="@dimen/font_size"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/speeds"
            android:paddingLeft="20dp"
            android:textSize="@dimen/font_size"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/headings"
            android:paddingLeft="20dp"
            android:textSize="@dimen/font_size"
            />
    <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/latlon"
            android:paddingLeft="20dp"
            android:textSize="@dimen/font_size"
            />
</LinearLayout>
